<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/student_history_details_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        android:textColor="@color/colorPrimary"
        android:textSize="20dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp" />


    <ImageView
        android:id="@+id/student_history_details_tutor_picture"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginRight="6dip"
        android:src="@drawable/default_icon"
        android:layout_marginStart="31dp"
        android:layout_below="@+id/student_history_details_tutor_label"
        android:layout_alignParentStart="true"
        android:layout_marginTop="13dp" />

    <TextView
        android:id="@+id/student_history_details_tutor_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tutor Email"
        android:textSize="13dp"
        android:layout_alignBottom="@+id/student_history_details_tutor_picture"
        android:layout_alignStart="@+id/student_history_details_tutor_name" />

    <TextView
        android:id="@+id/student_history_details_tutor_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tutor name"
        android:textSize="16dp"
        android:layout_alignTop="@+id/student_history_details_tutor_picture"
        android:layout_toEndOf="@+id/student_history_details_session_label" />

    <TextView
        android:id="@+id/student_history_details_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="location"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/student_history_details_session_label"
        android:layout_alignStart="@+id/student_history_details_session_label" />

    <TextView
        android:id="@+id/student_history_details_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/student_history_details_location"
        android:layout_below="@+id/student_history_details_location"
        android:layout_marginTop="16dp"
        android:text="start" />

    <TextView
        android:id="@+id/student_history_details_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="end time"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/student_history_details_start"
        android:layout_alignStart="@+id/student_history_details_start" />

    <TextView
        android:id="@+id/student_history_details_tutor_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tutor:"
        android:textColor="@color/colorPrimary"
        android:layout_below="@+id/student_history_details_title"
        android:layout_alignStart="@+id/student_history_details_tutor_picture"
        android:layout_marginTop="19dp" />

    <TextView
        android:id="@+id/student_history_details_session_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="34dp"
        android:text="Session Info:"
        android:layout_below="@+id/student_history_details_tutor_picture"
        android:layout_alignStart="@+id/student_history_details_tutor_picture" />

    <TextView
        android:id="@+id/student_history_details_school"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/student_history_details_end"
        android:layout_below="@+id/student_history_details_end"
        android:layout_marginTop="16dp"
        android:text="school" />

    <TextView
        android:id="@+id/student_history_details_rate_tutor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/student_history_details_school"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:text="Rate tutor:" />

    <RatingBar
        android:id="@+id/tutor_details_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:attr/ratingBarStyle"
        android:numStars="5"
        android:stepSize="0.1"
        android:isIndicator="false"
        android:layout_below="@+id/student_history_details_rate_tutor"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp" />

    <Button
        android:id="@+id/sessionPlayRecording"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_main"
        android:paddingRight="25dp"
        android:paddingLeft="25dp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/color_white"
        android:layout_below="@+id/tutor_details_rating"
        android:text="Play Recording"/>

    <Button
        android:id="@+id/sessionStopRecording"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_cancel"
        android:paddingRight="25dp"
        android:paddingLeft="25dp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/color_white"
        android:layout_below="@id/tutor_details_rating"
        android:text="Stop Recording"/>


</RelativeLayout>