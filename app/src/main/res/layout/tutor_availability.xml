<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_tutor_calendar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cs.dal.krush.tutorFragments.TutorCalendarFragment">

    <TextView
        android:text="Availability"
        android:textSize="30sp"
        android:textColor="@color/colorPrimary"
        android:textStyle="normal|bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-medium"
        android:id="@+id/txtAvailabilityTitle" />

    <TextView
        android:text="Select Availability"
        android:textColor="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:layout_marginTop="13dp"
        android:id="@+id/txtSelectAvailability"
        android:layout_below="@+id/txtAvailabilityTitle"
        android:layout_alignParentStart="true" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="START TIME"
        android:id="@+id/btnStartTime"
        android:minHeight="30dp"
        android:background="@drawable/button_main"
        android:paddingRight="25dp"
        android:paddingLeft="25dp"
        android:paddingTop="5px"
        android:paddingBottom="5px"
        android:layout_marginBottom="15px"
        android:layout_marginTop="15dp"
        android:minWidth="170dp"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/bottom_bar_color"
        android:layout_below="@+id/btnDate"
        android:layout_alignParentLeft="true"
        android:layout_alignEnd="@+id/btnDate" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="END TIME"
        android:id="@+id/btnEndTime"
        android:background="@drawable/button_main"
        android:paddingRight="25dp"
        android:paddingTop="5px"
        android:paddingBottom="5px"
        android:layout_marginTop="10dp"
        android:paddingLeft="25dp"
        android:minHeight="30dp"
        android:minWidth="170dp"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/bottom_bar_color"
        android:layout_below="@+id/btnStartTime"
        android:layout_alignRight="@+id/btnStartTime"
        android:layout_alignEnd="@+id/btnStartTime" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SUBMIT"
        android:id="@+id/btnSubmit"
        android:background="@drawable/button_main"
        android:paddingRight="25dp"
        android:paddingLeft="25dp"
        android:minHeight="50dp"
        android:minWidth="140dp"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/bottom_bar_color"
        android:layout_marginLeft="115px"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/btnEndTime"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Calendar"
        android:id="@+id/btnViewCalendar"
        android:background="@drawable/button_main"
        android:paddingRight="25dp"
        android:paddingLeft="25dp"
        android:minHeight="30dp"
        android:minWidth="70dp"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/bottom_bar_color"
        android:layout_marginTop="34dp"
        android:layout_below="@+id/btnSubmit"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Your Availability"
        android:textColor="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:paddingTop="10dp"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:id="@+id/txtViewAvailability"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/btnViewLocation"
        android:layout_alignParentStart="true" />

    <ListView
        android:id="@+id/lvTutorScheduleListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fontFamily="sans-serif-medium"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/txtViewAvailability"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DATE"
        android:id="@+id/btnDate"
        android:background="@drawable/button_main"
        android:layout_marginTop="10px"
        android:paddingRight="25dp"
        android:paddingLeft="25dp"
        android:paddingTop="5px"
        android:paddingBottom="5px"
        android:minWidth="170dp"
        android:minHeight="30dp"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/bottom_bar_color"
        android:layout_alignTop="@+id/txtDate" />

    <Button
        android:id="@+id/btnViewLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_main"
        android:minHeight="30dp"
        android:minWidth="70dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:text="Set Location"
        android:textColor="@color/bottom_bar_color"
        android:layout_alignBaseline="@+id/btnViewCalendar"
        android:layout_alignBottom="@+id/btnViewCalendar"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/txtDate"
        android:paddingTop="15dp"
        android:textSize="15dp"
        android:minWidth="70dp"
        android:fontFamily="sans-serif-medium"
        android:layout_below="@+id/txtSelectAvailability"
        android:layout_toEndOf="@+id/btnDate" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:id="@+id/txtStartTime"
        android:fontFamily="sans-serif-medium"
        android:layout_above="@+id/btnEndTime"
        android:layout_below="@id/txtDate"
        android:layout_toEndOf="@+id/btnStartTime" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/txtEndTime"
        android:layout_marginBottom="-15px"
        android:textSize="15dp"
        android:fontFamily="sans-serif-medium"
        android:layout_alignBottom="@+id/btnEndTime"
        android:layout_toEndOf="@+id/btnEndTime" />

</RelativeLayout>


