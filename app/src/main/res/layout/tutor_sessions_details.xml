<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tutor_history_details_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        android:textColor="@color/colorPrimary"
        android:textSize="20dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp" />


    <ImageView
        android:id="@+id/tutor_history_details_student_picture"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginRight="6dip"
        android:src="@drawable/default_icon"
        android:layout_marginStart="31dp"
        android:layout_below="@+id/tutor_history_details_student_label"
        android:layout_alignParentStart="true"
        android:layout_marginTop="13dp" />

    <TextView
        android:id="@+id/tutor_history_details_student_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Student Email"
        android:textSize="13dp"
        android:layout_alignBottom="@+id/tutor_history_details_student_picture"
        android:layout_alignStart="@+id/tutor_history_details_student_name" />

    <TextView
        android:id="@+id/tutor_history_details_student_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Student name"
        android:textSize="16dp"
        android:layout_alignTop="@+id/tutor_history_details_student_picture"
        android:layout_toEndOf="@+id/tutor_history_details_session_label" />

    <TextView
        android:id="@+id/tutor_history_details_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="location"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/tutor_history_details_session_label"
        android:layout_alignStart="@+id/tutor_history_details_session_label" />

    <TextView
        android:id="@+id/tutor_history_details_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tutor_history_details_location"
        android:layout_below="@+id/tutor_history_details_location"
        android:layout_marginTop="16dp"
        android:text="start" />

    <TextView
        android:id="@+id/tutor_history_details_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="end time"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/tutor_history_details_start"
        android:layout_alignStart="@+id/tutor_history_details_start" />

    <TextView
        android:id="@+id/tutor_history_details_student_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Student:"
        android:textColor="@color/colorPrimary"
        android:layout_below="@+id/tutor_history_details_title"
        android:layout_alignStart="@+id/tutor_history_details_student_picture"
        android:layout_marginTop="19dp" />

    <TextView
        android:id="@+id/tutor_history_details_session_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="34dp"
        android:text="Session Info:"
        android:layout_below="@+id/tutor_history_details_student_picture"
        android:layout_alignStart="@+id/tutor_history_details_student_picture" />

    <TextView
        android:id="@+id/tutor_history_details_school"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tutor_history_details_end"
        android:layout_below="@+id/tutor_history_details_end"
        android:layout_marginTop="16dp"
        android:text="school" />


</RelativeLayout>